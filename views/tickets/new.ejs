<%- include('../partials/header') %>

    <h2>New ticket</h2>
    <form action="/flights/<%= flightId %>/tickets" method="POST">
        <label>Seat:</label>
            <input type="text" name="seat" required pattern="[A-F][1-9]\d?">

            <label>Price:</label>
          <input type="number" min="0" name="price" required>

        <input type="submit" value="submit">    
    </form>

